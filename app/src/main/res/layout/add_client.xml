<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:text="New Client"
        android:id="@+id/tvNationality"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="5dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Name"
        android:id="@+id/tvEmailAddress"
        android:layout_below="@+id/tvNationality"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="46dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etFirstName"
        android:layout_alignTop="@+id/tvEmailAddress"
        android:layout_centerHorizontal="true"
        android:hint="First Name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Name"
        android:id="@+id/textView4"
        android:layout_below="@+id/etFirstName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etLastName"
        android:layout_below="@+id/etFirstName"
        android:layout_alignLeft="@+id/etFirstName"
        android:layout_alignStart="@+id/etFirstName"
        android:hint="Last Name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nationality"
        android:id="@+id/textView5"
        android:layout_below="@+id/etLastName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etNationality"
        android:layout_below="@+id/etLastName"
        android:layout_alignLeft="@+id/etLastName"
        android:layout_alignStart="@+id/etLastName"
        android:hint="Nationality" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="National Id"
        android:id="@+id/textView6"
        android:layout_below="@+id/etNationality"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etNationalId"
        android:layout_below="@+id/etNationality"
        android:layout_alignLeft="@+id/etNationality"
        android:layout_alignStart="@+id/etNationality"
        android:hint="National Id" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Number"
        android:id="@+id/textView7"
        android:layout_below="@+id/etNationalId"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etPhoneNumber"
        android:inputType="phone"
        android:ems="10"
        android:layout_below="@+id/etNationalId"
        android:layout_alignLeft="@+id/etNationalId"
        android:layout_alignStart="@+id/etNationalId"
        android:hint="Phone Number" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email Address"
        android:id="@+id/textView8"
        android:layout_below="@+id/etPhoneNumber"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etEmailAddress"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_below="@+id/etPhoneNumber"
        android:layout_alignLeft="@+id/etPhoneNumber"
        android:layout_alignStart="@+id/etPhoneNumber"
        android:hint="Email Address" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Occupation"
        android:id="@+id/textView9"
        android:layout_below="@+id/etEmailAddress"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etOccupation"
        android:layout_below="@+id/etEmailAddress"
        android:layout_alignLeft="@+id/etEmailAddress"
        android:layout_alignStart="@+id/etEmailAddress"
        android:hint="Occupation" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date Of Birth"
        android:id="@+id/textView10"
        android:layout_below="@+id/etOccupation"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/etDateOfBirth"
        android:layout_below="@+id/etOccupation"
        android:layout_alignLeft="@+id/etOccupation"
        android:layout_alignStart="@+id/etOccupation"
        android:hint="Date Of Birth" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Physical Address"
        android:id="@+id/textView11"
        android:layout_below="@+id/etDateOfBirth"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/etPhysicalAddress"
        android:layout_below="@+id/etDateOfBirth"
        android:layout_alignRight="@+id/etDateOfBirth"
        android:layout_alignEnd="@+id/etDateOfBirth"
        android:hint="Physical Address" />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/btnCancel"
        android:onClick="cancelCreation"
        android:layout_below="@+id/etPhysicalAddress"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Client"
        android:id="@+id/btnCreateClient"
        android:onClick="createClient"
        android:layout_alignTop="@+id/btnCancel"
        android:layout_alignRight="@+id/etPhysicalAddress"
        android:layout_alignEnd="@+id/etPhysicalAddress" />


</RelativeLayout>
