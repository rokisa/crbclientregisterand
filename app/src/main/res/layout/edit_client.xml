<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="20dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_height="wrap_content"
        android:src="@drawable/edit"
        android:id="@+id/imageView2"
        android:padding="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:text="Edit Client"
        android:id="@+id/tvEdNationality"
        android:padding="5dp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/imageView2"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Name"
        android:id="@+id/tvEdEmailAddress"
        android:layout_below="@+id/tvEdNationality"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="46dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etEdFirstName"
        android:layout_alignTop="@+id/tvEdEmailAddress"
        android:layout_centerHorizontal="true"
        android:hint="First Name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Name"
        android:id="@+id/textView4"
        android:layout_below="@+id/etEdFirstName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etEdLastName"
        android:layout_below="@+id/etEdFirstName"
        android:layout_alignLeft="@+id/etEdFirstName"
        android:layout_alignStart="@+id/etEdFirstName"
        android:hint="Last Name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nationality"
        android:id="@+id/textView5"
        android:layout_below="@+id/etEdLastName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etEdNationality"
        android:layout_below="@+id/etEdLastName"
        android:layout_alignLeft="@+id/etEdLastName"
        android:layout_alignStart="@+id/etEdLastName"
        android:hint="Nationality" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="National Id"
        android:id="@+id/textView6"
        android:layout_below="@+id/etEdNationality"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etEdNationalId"
        android:layout_below="@+id/etEdNationality"
        android:layout_alignLeft="@+id/etEdNationality"
        android:layout_alignStart="@+id/etEdNationality"
        android:hint="National Id" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Number"
        android:id="@+id/textView7"
        android:layout_below="@+id/etEdNationalId"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etEdPhoneNumber"
        android:inputType="phone"
        android:ems="10"
        android:layout_below="@+id/etEdNationalId"
        android:layout_alignLeft="@+id/etEdNationalId"
        android:layout_alignStart="@+id/etEdNationalId"
        android:hint="Phone Number" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email Address"
        android:id="@+id/textView8"
        android:layout_below="@+id/etEdPhoneNumber"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etEdEmailAddress"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_below="@+id/etEdPhoneNumber"
        android:layout_alignLeft="@+id/etEdPhoneNumber"
        android:layout_alignStart="@+id/etEdPhoneNumber"
        android:hint="Email Address" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Occupation"
        android:id="@+id/textView9"
        android:layout_below="@+id/etEdEmailAddress"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etEdOccupation"
        android:layout_below="@+id/etEdEmailAddress"
        android:layout_alignLeft="@+id/etEdEmailAddress"
        android:layout_alignStart="@+id/etEdEmailAddress"
        android:hint="Occupation" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date Of Birth"
        android:id="@+id/textView10"
        android:layout_below="@+id/etEdOccupation"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/etEdDateOfBirth"
        android:layout_below="@+id/etEdOccupation"
        android:layout_alignLeft="@+id/etEdOccupation"
        android:layout_alignStart="@+id/etEdOccupation"
        android:hint="Date Of Birth" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Physical Address"
        android:id="@+id/textView11"
        android:layout_below="@+id/etEdDateOfBirth"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/etEdPhysicalAddress"
        android:layout_below="@+id/etEdDateOfBirth"
        android:layout_alignRight="@+id/etEdDateOfBirth"
        android:layout_alignEnd="@+id/etEdDateOfBirth"
        android:hint="Physical Address" />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/btnCancel"
        android:onClick="cancelCreation"
        android:layout_below="@+id/etEdPhysicalAddress"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Client"
        android:id="@+id/btnUpdateClient"
        android:onClick="updateClient"
        android:layout_alignTop="@+id/btnCancel"
        android:layout_alignRight="@+id/etEdPhysicalAddress"
        android:layout_alignEnd="@+id/etEdPhysicalAddress" />

</RelativeLayout>
